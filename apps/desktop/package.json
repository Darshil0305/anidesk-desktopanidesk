{
  "name": "anidesk-desktop",
  "version": "1.0.0",
  "description": "Electron-based desktop application for anime streaming",
  "main": "dist/main/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"vite\" \"electron-dev\"",
    "dev:electron": "electron .",
    "dev:vite": "vite",
    "build": "vite build && tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "electron-dev": "wait-on http://localhost:5173 && electron .",
    "electron-pack": "npm run build && electron-builder",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "eslint": "^8.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.anidesk.desktop",
    "productName": "AniDesk",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ]
  }
}
